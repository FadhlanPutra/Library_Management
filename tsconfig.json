{
    "compilerOptions": {
        
      "lib": ["dom", "es2015"],
      "outDir": "./lib/cjs/",
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "allowJs": true,
      "module": "es2020",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "strict": true,
      "isolatedModules": true,
      "target": "es2020",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true,
      "paths": {
        "@/*": ["./resources/js/*"],
        "ziggy-js": ["./vendor/tightenco/ziggy"]
      }
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.d.ts",
      "src/**/*.ts*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "lib"
    ]
  }